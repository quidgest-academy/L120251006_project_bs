{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"compilerOptions": {
		"composite": true,
		"baseUrl": ".",
		"allowJs": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "dist",
		"noErrorTruncation": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"paths": {
			"@/*": [
				"./src/*"
			]
		}
	},
	"include": [
		"build",
		"plugins",
		"src/**/*",
		"**/package.json",
		"**/vite.config.*",
		"**/svgstore.config.ts"
	],
	"exclude": []
}
